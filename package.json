{
  "name": "root-cause-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint \"packages\" --ext .ts --ext .js",
    "lint:commitmsg": "commitlint -E HUSKY_GIT_PARAMS",
    "test": "./infra-scripts/test.sh",
    "build": "./infra-scripts/build.sh",
    "deduplicate": "yarn-deduplicate -s fewer yarn.lock",
    "verdaccio": "verdaccio -c verdaccio/config.yaml"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "commitizen": "4.2.1",
    "cz-conventional-changelog": "3.2.1",
    "concurrently": "^5.3.0",
    "eslint": "^6",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "typescript": "^3.9.2",
    "verdaccio": "^4.8.1",
    "wait-port": "^0.2.9",
    "yarn-deduplicate": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "./infra-scripts/pre-push.sh",
      "commit-msg": "yarn lint:commitmsg"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "resolutions": {
    "typescript": "^3.9.6"
  }
}
